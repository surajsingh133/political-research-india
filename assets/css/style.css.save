/* ABOUT SECTION */
.about-intro {
  font-size: 20px;
  max-width: 800px;
  line-height: 1.6;
  margin-bottom: 40px;
}

.about-grid {
  display: grid;
  gap: 30px;
  grid-template-columns: repeat(auto-fit, minmax(260px,1fr));
}

.about-card {
  background: white;
  padding: 28px;
  border-radius: 18px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
}

/* WORK SECTION */
.portfolio-card {
  position: relative;
  overflow: hidden;
  height: 260px;
  border-radius: 18px;
}

.portfolio-info {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 18px;
  background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
  color: white;
}

/* CONTACT */
.contact-box {
  background: white;
  padding: 35px;
  max-width: 480px;
  border-radius: 18px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
}

.contact-btn {
  display: inline-block;
  margin-top: 18px;
  background: #0b3d91;
  color: white;
  padding: 12px 22px;
  border-radius: 10px;
  text-decoration: none;
}
